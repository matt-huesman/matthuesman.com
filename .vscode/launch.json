{
    "version": "0.2.0",
    "configurations": [
      {
        "name": "Attach to Docker",
        "type": "node",
        "request": "attach",
        "port": 9229,
        "restart": true,
        "timeout": 10000,
        "localRoot": "${workspaceFolder}",
        "remoteRoot": "/app"
