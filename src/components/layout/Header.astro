---
import HeaderLink from '@components/ui/HeaderLink.astro';
---

<script>
    import gsap from 'gsap'
    gsap.from('#anim-header', {y: -100, opacity: 0, ease: 'expo.out', duration: 1.5})
</script>

<header id="anim-header" class="flex justify-between items-center p-6 max-w-5xl mx-auto">
    <div class="flex items-center space-x-4">
      <img src="/images/profile.png" alt="Profile Picture" class="w-12 h-12 rounded-full">
      <h1 class="text-2xl font-semibold"><a href="/">Matt Huesman</a></h1>
    </div>
    <nav class="space-x-4">
      <HeaderLink href="/#projects">Projects</HeaderLink>
      <HeaderLink href="/#experience">Experience</HeaderLink>
      <HeaderLink href="/contact">Contact</HeaderLink>
      
      <i class="fa-solid fa-circle-half-stroke"></i>
    </nav>
</header>