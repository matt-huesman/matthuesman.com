---
import profile from '../assets/profile.png';
---

<script>
    import gsap from 'gsap'
    gsap.from('#anim-header', {y: -100, opacity: 0, ease: 'expo.out', duration: 1.5})
</script>

<header id="anim-header" class="flex justify-between items-center p-6 max-w-5xl mx-auto">
    <div class="flex items-center space-x-4">
      <img src={profile.src} alt="Profile Picture" class="w-12 h-12 rounded-full">
      <h1 class="text-2xl font-semibold">Matt Huesman</h1>
    </div>
    <nav class="space-x-4">
      <a href="test" class="relative group text-gray-700 hover:text-black transition duration-300">
        Projects
        <span class="absolute left-0 -bottom-1.5 w-0 h-0.5 bg-black transition-all duration-300 group-hover:w-full"></span>
      </a>
      <a href="#" class="relative group text-gray-700 hover:text-black">
        Experience
        <span class="absolute left-0 -bottom-1.5 w-0 h-0.5 bg-black transition-all duration-300 group-hover:w-full"></span>
      </a>
      <a href="#" class="relative group text-gray-700 hover:text-black">
        Contact
        <span class="absolute left-0 -bottom-1.5 w-0 h-0.5 bg-black transition-all duration-300 group-hover:w-full"></span>
      </a>
      <i class="fa-solid fa-circle-half-stroke"></i>
    </nav>
</header>