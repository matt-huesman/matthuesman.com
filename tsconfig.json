{
  "extends": "astro/tsconfigs/strict",
  "include": [".astro/types.d.ts", "**/*"],
  "exclude": ["dist"],
  "compilerOptions": {
    "module": "ESNext",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "baseUrl": "./src",
    "paths": {
      "@public/*": ["../public/*"],
      "@layouts/*": ["layouts/*"],
      "@components/*": ["components/*"],
      "@pages/*": ["pages/*"],
      "@scripts/*": ["scripts/*"]
    }
  }
}